<div class="custom_card ">
    <h2>Mon association  <span class="badge badge-pill badge-primary"> {{user.associations|length}} </span></h2>
    <a class="btn btn-primary cursor angle-r" id="js_btn_add_association" title="Ajouter une association" 
        {# on bloque pour l'instant l'affiliation Ã  plus d'une association  #}
        {% if user.associations|length > 0 %} style="display:none;"{% endif %} >
        <i class="fas fa-plus"></i>
    </a>
        
        {% for asso in user.associations %}
            <div class="row mb-2 customer_card_content">
            <div class="col-sm-10">
                <h4>{{ asso.name }}</h4>
                <p>{{ asso.objet }}</p>
                <p>{{ asso.address.street |lower }}<p>
                <p>{{ asso.address.postalCode ~", "~ asso.address.city }}</p>

            </div>
            <div class="col-sm-2">
                {% include "account/form/_delete_asso.html.twig" %}
            </div>

            </div>
           
            
    
        {% else %}
            <li>Vous n'avez pas encore d'association</li>
        {% endfor %}
    </ul>
    <form method="post" action="{{ path('account_ajax_add_association')}}" class="mt-2"id="js_form_add_association"style="display:none">
        <div class="form-group " >
            <label for="siret">Code RNA de votre association</label>
            <input class="form-control" type="text" 
                name="siret" id="siret" maxlength="10" autocomplete="off" 
                required placeholder="WXXXXXXXXX"/>
        </div>
        <button class="btn btn-primary"type="submit" name="newAssociationSubmit"  >Ajouter</button>
    </form>
</div>