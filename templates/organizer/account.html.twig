{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block stylesheets %}
      {{ encore_entry_link_tags('organizer_account') }}
{% endblock %}
  
{% block javascripts %}
        {{ encore_entry_script_tags('organizer_account') }}
{% endblock %}

{% block body %}

<section  class="container jumbotron">
{# {{dump(organizer)}} #}
<h1>Mon compte organisateur</h1>
    <div class="row">
        <div class="col-md-6">
             {% include 'organizer/_info_asso.html.twig'  %}
        </div>
        <div class=" col-md-6" > 
            {% include 'organizer/_info_perso.html.twig'  %}
        </div>
        
    </div>

    <div class="row">
        <div class="col-md-6" > 
             {% include 'organizer/_info_list_loto.html.twig'  %}
        </div>
    </div>
     <!-- Modal -->
        <div class="modal fade" id="modal-organizer" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content" >
              <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLongTitle"> <span></span></h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body text-center">
                  <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                  </div>

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
              </div>
            </div>
          </div>
        </div>
        <!-- end modal -->
</section>

{% endblock %}
